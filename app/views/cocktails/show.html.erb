<div class="container">
  <div class="row">

    <div class="col-xs-12 col-sm-6">
      <div class="card-name text-center" >
        <h2><strong><%= @cocktail.name %></strong></h2>
        <%= cl_image_tag @cocktail.photo, height: 350, width: 500, crop: :fill %>
      </div>
    </div>

    <div class="col-xs-12 col-sm-6">

        <div class="card-test">
          <h4>Ingredients List: <br><br><% @cocktail.doses.each do |dose| %></h4>
          <p><%= dose.ingredient.name %> : <%= dose.description %>
          <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="fa fa-trash-o" aria-hidden="true"></i>
            <% end %></p>
          <% end %>
          <br>
          <p><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), {:style=>'color:#800000;'} %></p>
        </div>


        <div class="card-test">
          <h4>Reviews: <br><br><% @cocktail.reviews.each do |review| %></h4>
          <p><strong><%= review.title %></strong> : <%= review.content %> <%= review.rating %></p>
          <% end %>
          <br>
          <p><%= link_to "Add a review", new_cocktail_review_path(@cocktail), {:style=>'color:#800000;'} %></p>
        </div>

    </div>
  </div>

    <div class="text-center" style: :color#800000">
      <%= link_to "Back", cocktails_path(@cocktail), {:style=>'color:#800000;'}%>
    </div>
</div>
