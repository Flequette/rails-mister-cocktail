<%= render "components/banner" %>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-3 col-md-3">

      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url(<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>)">

        <div class="card-category">
          <h3><%= cocktail.name %></h3>
        </div>

        <div class="card-link">
          <%= link_to cocktail_path(cocktail) do %>
            <i class="fa fa-plus-circle fa-stack-2px fa-2x" aria-hidden="true" style="#230004"></i>
          <% end %>
        </div>

      </div>
    </div>
    <% end %>
  </div>
</div>

<%= render "components/footer" %>





