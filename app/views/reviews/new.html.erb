<div class="container">

  <div class="title">
    <h2>New Review</h2>
    <h4>Please, enter your review</h4>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
      <%= simple_form_for [@cocktail, @review] do |f| %>
        <%= f.input :title %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <div class="text-center">
          <%= f.submit "Add a review", class: "btn btn-primary" %>
        </div>
      <% end %>
      <br>
      <div class="text-center">
        <%= link_to "Back", cocktails_path(@cocktail), {:style=>'color:#230004;'} %>
      </div>
    </div>
  </div>
</div>

